#include <stdio.h>  
int fact (int);  
int main()  
{  
    int n,f;  
    printf("Enter the number whose factorial you want to calculate?");  
    scanf("%d",&n);  
    printf("factorial = %d",fact(n));  
}  
int fact(int n)  
{  
    if (n == 0 || n == 1)  
        return 1;

    else    
        return n*fact(n-1);  
}  
